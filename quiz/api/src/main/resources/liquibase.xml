<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
     https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <!-- See https://www.liquibase.org/manual/home#available_database_refactorings for a list of supported elements and attributes-->
    <!-- Adding a global property -->

    <changeSet id="test_item" author="MoH" dbms="mysql">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test_item"/>
            </not>
        </preConditions>
        <comment>A table to store items</comment>
        <createTable tableName="test_item">
            <column name="item_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_name" type="varchar(45)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="created_by" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="date_created" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="retired" type="smallint" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="char(58)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="test_item_attribute_type" author="MoH" dbms="mysql">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test_item_attribute_type"/>
            </not>
        </preConditions>
        <comment>A table to store items attribute type</comment>
        <createTable tableName="test_item_attribute_type">
            <column name="type_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="attribute_name" type="varchar(45)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="retired" type="smallint" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="char(58)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="test_item_attribute" author="MoH" dbms="mysql">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test_item_attribute"/>
            </not>
        </preConditions>
        <comment>A table to store items attribute</comment>
        <createTable tableName="test_item_attribute">
            <column name="attribute_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_id" type="int">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="type_id" type="int">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="date_added" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="char(58)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="test_user" author="MoH" dbms="mysql">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="test_user"/>
            </not>
        </preConditions>
        <comment>A table to store test user</comment>
        <createTable tableName="test_user">
            <column name="user_id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(45)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="last_name" type="varchar(45)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="username" type="varchar(45)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="password" type="varchar(45)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="is_active" type="int" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
            <column name="uuid" type="char(58)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
        <createIndex indexName="ind_test_item_attribute"
                     schemaName="openmrs"
                     tableName="test_item_attribute"
                     unique="true">
            <column name="item_id" type="int"/>
        </createIndex>
        <createIndex indexName="ind_test_item_attribute_type"
                     schemaName="openmrs"
                     tableName="test_item_attribute_type"
                     unique="true">
            <column name="type_id" type="int"/>
        </createIndex>
        <createIndex indexName="ind_test_item"
                     schemaName="openmrs"
                     tableName="test_item"
                     unique="true">
            <column name="created_by" type="int"/>
        </createIndex>
        <addForeignKeyConstraint constraintName="fk_test_item_attribute"
                                 baseTableName="test_item_attribute" baseColumnNames="item_id"
                                 referencedTableName="test_item" referencedColumnNames="item_id" onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint constraintName="fk_test_item_attribute_type_id"
                                 baseTableName="test_item_attribute" baseColumnNames="type_id"
                                 referencedTableName="test_item_attribute_type" referencedColumnNames="type_id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
        <addForeignKeyConstraint constraintName="fk_test_item_attribute_created_by"
                                 baseTableName="test_item_attribute" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="user_id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
        <addForeignKeyConstraint constraintName="fk_test_item_created_by"
                                 baseTableName="test_item" baseColumnNames="created_by"
                                 referencedTableName="users" referencedColumnNames="user_id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>


    </changeSet>
    <changeSet author="bosco" id="test_item_attribute_type_insert">
        <comment>Insert data</comment>
        <sql>
            insert into test_item_attribute_type (attribute_name, uuid ) values ('color', UUID());
        </sql>
        <sql>
            insert into test_item_attribute_type (attribute_name, uuid ) values ('price', UUID());
        </sql>
        <sql>
            insert into test_item_attribute_type (attribute_name, uuid ) values ('origin', UUID());
        </sql>
        <sql>
            insert into test_item_attribute_type (attribute_name, uuid ) values ('destination', UUID());
        </sql>
    </changeSet>
</databaseChangeLog>